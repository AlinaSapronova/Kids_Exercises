<!DOCTYPE html>
<html>
  <head>
    <title>Kids Exercises</title>
    <%= render partial: "shared/assets" %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "button", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
     <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body>

     <%= render partial: "shared/navbar" %>

     <div class="container mt-3">
       <% if notice.present? %>
        <%= render partial: "shared/message", locals: { message: notice, css_class: "success" } %>
      <% end %>
      
      <% if alert.present? %>
        <%= render partial: "shared/message", locals: { message: alert, css_class: "danger" } %>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
